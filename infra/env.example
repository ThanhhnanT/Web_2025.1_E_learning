# MongoDB Configuration
MONGGO_URL=mongodb+srv://username:password@cluster.mongodb.net/E-Learning
MONGODB_DB_NAME=E-Learning

# LLM Configuration
# Required: Groq API Key (used as OPENAI_API_KEY)
OPENAI_API_KEY=your_groq_api_key_here

# Optional: For local LLM
LLM_MODEL_PATH=/path/to/local/model.gguf

# Optional: Google/Gemini API Keys
GOOGLE_API_KEY=your_google_api_key_here
KAGGLE_API_KEY=your_kaggle_api_key_here

# Vector Database Configuration
VECTORDB_PATH=./chroma_db

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Document Processing Configuration (optional)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Optional: Unsplash API for image search
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_CLIENT_ID=your_unsplash_client_id
UNSPLASH_SECRET_KEY=your_unsplash_secret_key
UNSPLASH_CLIENT_SECRET=your_unsplash_client_secret

